extends layout

block content
  div.row
    div.col-lg-4
      table.table
        thead
          tr
            th Phone number
            th State
            th
        tbody
          each number in availableNumbers
            tr
              td= number.friendlyName
              td= number.region
              td
                form(name='purchaseNumber', action='/phone-number', method='POST')
                    input(type='hidden', name='phoneNumber', value="#{number.phone_number}")
                    input(type='submit', value='Purchase').btn.btn-xs.btn-default
